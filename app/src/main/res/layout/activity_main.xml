<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.hm.android.hmapp.main.MainActivity">
    <LinearLayout
        android:id="@+id/layheader"
        android:background="@color/header_line_color"
        android:paddingBottom="1dp"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <include layout="@layout/layout_header"/>
    </LinearLayout>

    <com.facebook.drawee.view.SimpleDraweeView
        android:layout_below="@id/layheader"
        android:id="@+id/main_toppicture"
        app:placeholderImageScaleType="fitCenter"
        app:placeholderImage="@mipmap/none"
        app:failureImageScaleType="fitCenter"
        app:failureImage="@mipmap/none"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />


    <android.support.v7.widget.RecyclerView
        android:padding="10dp"
        android:layout_below="@id/main_toppicture"
        android:id="@+id/main_recyclerView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>


</RelativeLayout>
