<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    android:layout_marginLeft="0dp"
    android:layout_marginRight="0dp"
    android:layout_marginTop="0dp"
    android:paddingTop="0dp"
    android:paddingBottom="0dp"
    android:paddingLeft="0dp"
    android:paddingRight="0dp"
    android:background="@drawable/shape_coner_bg"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">


    <TextView
        android:text="1"
        android:layout_marginTop="5dp"
        android:layout_marginLeft="5dp"
        android:id="@+id/device_item_seq"
        android:textColor="@color/white"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />



    <RelativeLayout
        android:layout_marginRight="20dp"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="10dp"
        android:layout_centerInParent="true"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <View
            android:id="@+id/device_item_status"
            android:background="@drawable/shape_trans_circle"
            android:layout_centerInParent="true"
            android:layout_width="120dp"
            android:layout_height="120dp" />

        <TextView
            android:layout_centerInParent="true"
            android:id="@+id/device_item_name"
            android:singleLine="true"
            android:background="@drawable/shape_blue_circle"
            android:textSize="25sp"
            android:gravity="center"
            android:text="照明"
            android:textColor="@color/white"
            android:ellipsize="end"
            android:layout_width="80dp"
            android:layout_height="80dp" />

    </RelativeLayout>

    <ImageView
        android:layout_marginTop="4dp"
        android:layout_marginRight="4dp"
        android:layout_alignParentRight="true"
        android:src="@mipmap/close"
        android:layout_width="26dp"
        android:layout_height="26dp" />


    <!--<ImageView-->
        <!--android:layout_gravity="center_horizontal"-->
        <!--android:id="@+id/device_item_status"-->
        <!--android:background="@drawable/shape_red_circle"-->
        <!--android:layout_width="28dp"-->
        <!--android:layout_height="28dp" />-->

</RelativeLayout>